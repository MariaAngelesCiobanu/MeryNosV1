<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_marmol">

    <TextView
        android:id="@+id/txtTituloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle del Pedido"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#B02E46"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtMesaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesa: "
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetallePedido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnMarcarPreparado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar como preparado"
        android:backgroundTint="#B02E46"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>
