<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/fondo_marmol">

    <TextView
        android:id="@+id/txtTituloPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Puntos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#B02E46"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/txtPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 puntos"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtDescuentoDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tienes descuentos disponibles"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#B02E46"
        android:textColor="#FFFFFF" />
</LinearLayout>
