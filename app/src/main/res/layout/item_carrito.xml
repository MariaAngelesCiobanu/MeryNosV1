<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/rosa_palo_semi"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtNombreCoctel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Nombre"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnDisminuirCantidad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="#B02E46"
            android:text="-"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <Button
            android:id="@+id/btnAumentarCantidad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="+"
            android:backgroundTint="#B02E46"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnEliminarCoctel"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_black_24dp"
            android:contentDescription="Eliminar cóctel"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtSubtotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="€0.00"
        android:gravity="end"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp" />

</LinearLayout>