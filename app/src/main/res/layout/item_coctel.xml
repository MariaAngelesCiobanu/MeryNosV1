<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_marmol"
        android:alpha="0.8"
        android:contentDescription="@string/descripcion_fondo_item_coctel" /> <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#CCFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgCoctel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:src="@drawable/placeholder_coctel"
            android:contentDescription="@string/descripcion_imagen_coctel"/> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreCoctel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Cóctel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1A1A1A"/>

        <TextView
            android:id="@+id/txtDescripcionCoctel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del cóctel"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/txtPrecioCoctel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€0.00"
                android:textSize="16sp"
                android:textColor="#B02E46"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAnadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_boton_anadir" android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#B02E46"
                android:textColor="#FFFFFF"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minHeight="48dp"/> <LinearLayout
            android:id="@+id/layoutAdminControles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/btnEditarCoctelAdmin"
                android:layout_width="48dp"   android:layout_height="48dp"  android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/descripcion_editar_coctel" android:padding="8dp"
                android:scaleType="fitCenter"
                android:tintMode="src_in"
                app:tint="@android:color/black" /> <ImageButton
            android:id="@+id/btnBorrarCoctelAdmin"
            android:layout_width="48dp"   android:layout_height="48dp"  android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/descripcion_borrar_coctel" android:padding="8dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="8dp"
            android:tintMode="src_in"
            app:tint="@android:color/black"/> </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</FrameLayout>