<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@drawable/fondo_marmol"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a MeryNos"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#B02E46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgLogoMain" app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/imgLogoMain"
        android:layout_width="344dp"
        android:layout_height="368dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Logo de MeryNos Cocktails"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/btnInvitado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenida" />

    <Button
        android:id="@+id/btnInvitado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entrar como invitado (QR)"
        android:backgroundTint="#B02E46"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imgLogoMain" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEntradaManualMesa"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnEntradaManualMesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingresar Mesa Manualmente"
        android:backgroundTint="#B02E46"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnInvitado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar sesiÃ³n"
        android:backgroundTint="#B02E46"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnEntradaManualMesa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintVertical_bias="0.0" /> </androidx.constraintlayout.widget.ConstraintLayout>